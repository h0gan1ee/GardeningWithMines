<Window x:Class="GardeningWithMines.SimpleConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GardeningWithMines"
        mc:Ignorable="d"
        Title="SimpleConfigWindow" Height="200" Width="300" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0"
                   Text="Map Row:"
                   Margin="0,0,10,0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right" />
        <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="Map Column:"
                   Margin="0,0,10,0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right" />
        <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Mines Count:"
                   Margin="0,0,10,0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right" />
        <TextBox Name="RowTextBox"  Grid.Row="0" Grid.Column="1"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Stretch" Loaded="RowTextBox_Loaded" TextChanged="RowTextBox_TextChanged" />
        <TextBox Name="ColumnTextBox"  Grid.Row="1" Grid.Column="1"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Stretch" Loaded="ColumnTextBox_Loaded" TextChanged="ColumnTextBox_TextChanged" />
        <TextBox Name="CountTextBox" Grid.Row="2" Grid.Column="1"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Stretch" Loaded="CountTextBox_Loaded" TextChanged="CountTextBox_TextChanged" />
        <GridSplitter Grid.Row="3" Grid.ColumnSpan="2"
                      Margin="10,0,10,0"
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Center"
                      Height="1" />
        <Button Name="ApplyButton"  Grid.Row="4" Grid.Column="1"
                Margin="0,6,0,6"
                Padding="15,0,15,2"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Right"
                Content="Apply" IsEnabled="False" Click="ApplyButton_Click"/>
    </Grid>
</Window>
